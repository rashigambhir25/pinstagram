<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/idLLTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <!--circle image for displaying the user image-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idCVAuthor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp" />

        <!--text view for displaying user name-->
        <TextView
            android:id="@+id/idTVAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="Pinstagram"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!--image view to display the post image-->
    <ImageView
        android:id="@+id/idIVPost"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/idLLTopBar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sample" />

    <!--text view to display likes count-->
    <TextView
        android:id="@+id/idTVLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVPost"
        android:layout_marginStart="6dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:padding="5dp"
        android:text="likes"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!--text view to display the caption
        in instagram post-->


    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVPost"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:padding="5dp"
        android:text="likes"
        android:textColor="@color/black"
        android:textStyle="bold" />

<!--    <Button-->
<!--        android:id="@+id/view_post"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/idIVPost"-->
<!--        android:layout_marginStart="300dp"-->
<!--        android:layout_marginEnd="6dp"-->
<!--        android:layout_marginBottom="6dp"-->
<!--        android:padding="6dp"-->
<!--        android:text="View Post" />-->
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idIVPost"
        android:text="👍🏻" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idIVPost"
        android:layout_marginStart="64dp"
        android:text="❤" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idIVPost"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="54dp"
        android:text="😂" />


    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idIVPost"
        android:layout_marginStart="192dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="54dp"
        android:text="👎" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idIVPost"
        android:layout_marginStart="256dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="54dp"
        android:text="🤮" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_above="@+id/idTVPostDesc"
        android:layout_below="@+id/idIVPost"
        android:layout_marginStart="320dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="48dp"
        android:text="😡" />

    <TextView
        android:id="@+id/idTVPostDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVLikes"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <ImageButton
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="21dp"
        android:layout_height="34dp"
        android:layout_marginStart="375dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:padding="3dp"
        android:src="@drawable/ic_baseline_more_vert_24" />

</RelativeLayout>
