<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile.MyProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_pic"
        android:layout_width="93dp"
        android:layout_height="88dp"
        android:layout_margin="5dp"
        android:src="@drawable/sample"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/userName_profile_t"
        android:layout_width="152dp"
        android:layout_height="42dp"
        android:text="UserName"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />


    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/post_t"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Post"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_of_followers_t" />

    <Button
        android:id="@+id/following_t"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Following"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/followers_t"
        app:layout_constraintTop_toBottomOf="@+id/no_of_followers_t" />

    <Button
        android:id="@+id/followers_t"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Followers"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/no_of_followers_t"
        app:layout_constraintTop_toBottomOf="@+id/no_of_followers2_t" />

    <TextView
        android:id="@+id/no_of_followers_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:text="No."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_of_followers2_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="36dp"
        android:text="Number"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/no_of_followers_t"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_of_following_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Number"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/no_of_followers2_t"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_following_t"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="following"
        android:outlineProvider="bounds"
        android:textColor="@color/Plum"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName_profile_t" />
    <Button
        android:id="@+id/button_follow_t"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="follow"
        android:outlineProvider="bounds"
        android:textColor="@color/Plum"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName_profile_t" />

    <GridView
        android:id="@+id/grid_profile_t"
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:horizontalSpacing="4dp"
        android:numColumns="3"
        android:verticalSpacing="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>